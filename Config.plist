<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>Version</key>
	<integer>1</integer>
	<key>Extension Name</key>
	<string>Perforce Swarm</string>
	<key>Extension Identifier</key>
	<string>com.perforce.popclip.extension.swarm</string>
	<key>Extension Description</key>
	<string>Opens up Swarm with the highlighted item (change or job)</string>
	<key>Actions</key>
	<array>
		<dict>
			<key>URL</key>
			<string>https://{popclip option site}/{popclip text}</string>
			<key>Image File</key>
			<string>SwarmIcon.png</string>
			<key>Title</key>
			<string>Perforce Swarm</string>
            <key>Regular Expression</key>
            <string>^(job)?\d+$</string>
		</dict>
	</array>
    <key>Options</key>
    <array>
        <dict>
            <key>Option Identifier</key>
            <string>site</string>
            <key>Option Label</key>
            <dict>
                <key>en</key>
                <string>Swarm Site</string>
            </dict>
            <key>Option Type</key>
            <string>string</string>
            <key>Option Default Value</key>
            <string>swarm.perforce.com</string>
        </dict>
    </array>
</dict>
</plist>
